@page "/events";
@inject HttpClient Http

<PageTitle>События</PageTitle>

<div class="content-container">
    <h3>События</h3>
    <form class="event-list-search">
        <input type="search" placeholder="Введи название события" aria-label="Поиск">
    </form>
    <div class="events-list">
        <div class="row">
            @if (@Events == null || @Events.Count() == 0)
            {
                <p>Пока событий нет :(</p>
            }
            else
            {
                foreach (var eventItem in @Events)
                {
                    <div class="card-container col-xl-4">
                        <div class="card">
                            <img class="card-img-top" src="https://skitguys.com/media/images/video/Confetti_Pink_Still_Shift-HD.jpg" alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title">@eventItem.Name</h5>
                                <p class="small text-muted">@((int)eventItem.AgeLimitation)+</p>
                                <div class="event-info">
                                    <div class="d-flex justify-content-between">
                                        <span class="event-info-text">Дата</span><span>@eventItem.StartDateTime.ToShortDateString()</span>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <span class="event-info-text">Время</span><span>@eventItem.StartDateTime.ToShortTimeString()</span>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <span class="event-info-text">Место</span><span>@eventItem.Address</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>



@code {

    public Event[] Events { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var e = new Event()
            {
                Id = 0,
                Name = "Super",
                StartDateTime = DateTime.Now.AddDays(-20),
                Address = "ул. им. Враского, 5",
                AgeLimitation = AgeLimitation.Teens
            };

        Events = new Event[] { e, e, e, e, e, e, e, e };
        //Events = await Http.GetFromJsonAsync<Event[]>("Event/events").ConfigureAwait(false);
    }
}
